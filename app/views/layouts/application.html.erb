<!DOCTYPE html>
<html>
  <head>
    <title>MyWiki</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="nav navbar navbar-default navbar-fixed-top">
      <div class="container">
        <%= link_to "My Wiki", root_path, class: "navbar-bar" %>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= link_to "New Article", new_article_path %>
            <%= link_to "DÃ©connection", destroy_user_session_path, :method => :delete %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <%= yield %>
        </div>
        <div class="col-md-4">
          <ul class="list-group">
            <li><%= link_to "All Article", root_path, class: 'list-group-item' %></li>
              <% Category.all.each do |category| %>
                <li><%= link_to category.name, articles_path(category: category.name), class: 'list-group-item' %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
