<p><%= @category.name %></p>

<div class="btn-group">
  <%= link_to "Retour", root_path, class: "btn btn-default" %>
  <% if user_signed_in? %>
    <%= link_to "Modifier", edit_category_path(@category), class: "btn btn-default" %>
    <%= link_to "Supprimer", category_path(@category), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
  <% end %>
</div>