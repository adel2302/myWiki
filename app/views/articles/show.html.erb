<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<div class="btn-group">
  <%= link_to "Retour", root_path, class: "btn btn-default" %>
  <% if user_signed_in? %>
    <%= link_to "Modifier", edit_article_path(@article), class: "btn btn-default" %>
    <%= link_to "Supprimer", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
  <% end %>
</div>